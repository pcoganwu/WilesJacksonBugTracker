@model IEnumerable<WilesJacksonBugTracker.Repository.Domain.Bugs>

@{
    ViewData["Title"] = "Index";
}

<p>
   <a asp-action="Create">Create a New Bug Report</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BugCreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BugCreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BugClosedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BugClosedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BugResolutionSummary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BugPriority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BugStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BugCreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BugCreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BugClosedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BugClosedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BugResolutionSummary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BugPriority.BugPriorityType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BugStatus.BugStatusType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Update</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
